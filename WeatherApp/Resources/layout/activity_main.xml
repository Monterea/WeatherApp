<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:p4="http://xamarin.com/mono/android/designer"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10px"
    android:background="@android:color/holo_green_dark"
    android:id="@+id/linearLayout1">
<LinearLayout
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_green_light"
        android:padding="10px"
    android:id="@+id/linearLayout2">
        <LinearLayout
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_green_dark"
            android:padding="10px"
    android:id="@+id/linearLayout2">
            <LinearLayout
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
        android:padding="10px"
    android:id="@+id/linearLayout2">
    <ImageView     
    android:background="@android:color/holo_green_dark"
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:minWidth="50px"
        android:minHeight="50px"
        android:layout_marginTop="15px"
        android:padding="15px"
        android:id="@+id/imageViewPicture"
        android:contentDescription="Weather picture" />
    
    <TextView
        android:text="Zvolené město"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="10dp"
        android:textSize="30sp"
        android:id="@+id/textViewCity" />
    <RelativeLayout
        android:background="@android:color/background_light"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginVertical="5px"
        android:layout_height="wrap_content">
        <TextView
            android:text="Počasí:"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="25px"
            android:minWidth="25px"
            android:layout_marginLeft="25dp"
            android:textSize="20sp"
            android:id="@+id/textView2" />
        <TextView
            android:text="--"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:textSize="20sp"
            android:id="@+id/textViewWeather" />
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginVertical="5px"
        android:layout_height="wrap_content">
        <TextView
            android:text="Oblačnost:"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="25px"
            android:minWidth="25px"
            android:layout_marginLeft="25dp"
            android:textSize="20sp"
            android:id="@+id/textView8" />
        <TextView
            android:text="--  %"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:textSize="20sp"
            android:id="@+id/textViewCloudcover" />
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginVertical="5px"
        android:layout_height="wrap_content">
        <TextView
            android:text="Teplota:"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="25px"
            android:minWidth="25px"
            android:layout_marginLeft="25dp"
            android:textSize="20sp"
            android:id="@+id/textView3" />
        <TextView
            android:text="-- °C"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:textSize="20sp"
            android:id="@+id/textViewTemperature" />
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginVertical="5px"
        android:layout_height="wrap_content">
        <TextView
            android:text="Vítr:"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="25px"
            android:minWidth="25px"
            android:layout_marginLeft="25dp"
            android:textSize="20sp"
            android:id="@+id/textView4" />
        <TextView
            android:text="azimut: --, --  km/h"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:textSize="20sp"
            android:id="@+id/textViewWind" />
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginVertical="5px"
        android:layout_height="wrap_content">
        <TextView
            android:text="Vlhkost:"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="25px"
            android:minWidth="25px"
            android:layout_marginLeft="25dp"
            android:textSize="20sp"
            android:id="@+id/textView5" />
        <TextView
            android:text="-- %"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:textSize="20sp"
            android:id="@+id/textViewHuminidy" />
    </RelativeLayout>
   <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginVertical="5px"
        android:layout_height="wrap_content">
        <TextView
            android:text="Tlak:"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="25px"
            android:minWidth="25px"
            android:layout_marginLeft="25dp"
            android:textSize="20sp"
            android:id="@+id/textView9" />
        <TextView
            android:text="--  MB"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:textSize="20sp"
            android:id="@+id/textViewPressure" />
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginVertical="5px"
        android:layout_height="wrap_content">
        <TextView
            android:text="Aktuální čas:"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="25px"
            android:minWidth="25px"
            android:layout_marginLeft="25dp"
            android:textSize="20sp"
            android:id="@+id/textView6" />
        <TextView
            android:text="--"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:textSize="20sp"
            android:id="@+id/textViewLocalTime" />
    </RelativeLayout>

    <Button
        android:text="VYBER MĚSTO"
        android:layout_margin="50px"
        android:background="@android:color/holo_green_dark"
        android:textStyle="bold"
        android:padding="20px"
        android:layout_marginVertical="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/buttonChangeCity" />
       
</LinearLayout>
</LinearLayout>
</LinearLayout>
</LinearLayout>